<object name="portal_css">

   <stylesheet
      id="++resource++plomobile/unmobile.css"
      media="screen" rel="stylesheet" rendering="import"
      cacheable="True" compression="safe" cookable="True"
      enabled="1" expression="" insert-before="ploneCustom.css"/>

   <stylesheet
      id="++resource++plomobile/mobile.css"
      media="screen and (max-width: 900px)" rel="stylesheet" rendering="import"
      cacheable="True" compression="safe" cookable="True"
      enabled="1" expression="" insert-before="ploneCustom.css"/>


   <!-- Disable out of the box mobile.css -->
   <stylesheet
      id="mobile.css"
      enabled="0" />

</object>